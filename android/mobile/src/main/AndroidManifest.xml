<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uni_frankfurt.cs.ccc.sse.adam" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StreetViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc" />

        <service android:name=".StreetMessagingService" >
        </service>

        <receiver android:name=".StreetMessageReadReceiver" >
            <intent-filter>
                <action android:name="de.uni_frankfurt.cs.ccc.sse.adam.ACTION_MESSAGE_READ" />
            </intent-filter>
        </receiver>
        <receiver android:name=".StreetMessageReplyReceiver" >
            <intent-filter>
                <action android:name="de.uni_frankfurt.cs.ccc.sse.adam.ACTION_MESSAGE_REPLY" />
            </intent-filter>
        </receiver>
    </application>

    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>

</manifest>
